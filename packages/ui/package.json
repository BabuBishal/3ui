{
  "name": "l3ui",
  "version": "0.1.4",
  "description": "A modern, accessible React component library with TypeScript support",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "pnpm run clean && vite build",
    "clean": "rm -rf dist",
    "dev": "vite",
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "typescript",
    "component-library",
    "design-system",
    "accessible",
    "react-components",
    "ui-library",
    "hooks",
    "l3ui"
  ],
  "author": "Bishal Babu Bohara <boharabishalbabu@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BabuBishal/l3ui.git",
    "directory": "ComponentLibrary/packages/ui"
  },
  "bugs": {
    "url": "https://github.com/BabuBishal/l3ui/issues"
  },
  "homepage": "https://github.com/BabuBishal/l3ui#readme",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "jsdom": "^27.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.12"
  }
}
